<s:Application xmlns:flexlib="http://code.google.com/p/flexlib/"
               xmlns:fx="http://ns.adobe.com/mxml/2009"
               xmlns:s="library://ns.adobe.com/flex/spark">
  <s:layout>
    <s:VerticalLayout paddingBottom="8"
                      paddingLeft="8"
                      paddingRight="8"
                      paddingTop="8" />
  </s:layout>
  <s:Label text="hAlign = left, vAlign = top" />
  <flexlib:FlowBox borderStyle="solid"
                   width="250"
                   backgroundColor="#FFFFFF"
                   horizontalGap="5"
                   verticalGap="5">

    <s:Button label="Button" />
    <s:TextInput />
    <s:Label text="Label" />
    <s:Button label="Another Button" />
    <s:Button label="Button With a Longer Label" />
    <s:Label text="Some Label" />
    <s:BorderContainer backgroundColor="#FF0000"
                       height="50"
                       width="10" />
    <s:Label text="Some Other Label" />
    <s:Label text="Hello" color="#FF0000" />

  </flexlib:FlowBox>

  <s:Label text="hAlign = center, vAlign = middle" />
  <flexlib:FlowBox borderStyle="solid"
                   width="250"
                   horizontalAlign="center"
                   verticalAlign="middle"
                   backgroundColor="#FFFFFF"
                   horizontalGap="5"
                   verticalGap="5">

    <s:Button label="Button" />
    <s:TextInput />
    <s:Label text="Label" />
    <s:Button label="Another Button" />
    <s:Button label="Button With a Longer Label" />
    <s:Label text="Some Label" />
    <s:BorderContainer backgroundColor="#FF0000"
                       height="50"
                       width="10" />
    <s:Label text="Some Other Label" />
    <s:Label text="Hello" color="#FF0000" />

  </flexlib:FlowBox>

  <s:Label text="hAlign = right, vAlign = bottom" />
  <flexlib:FlowBox borderStyle="solid"
                   width="250"
                   horizontalAlign="right"
                   verticalAlign="bottom"
                   backgroundColor="#FFFFFF"
                   horizontalGap="5"
                   verticalGap="5">

    <s:Button label="Button" />
    <s:TextInput />
    <s:Label text="Label" />
    <s:Button label="Another Button" />
    <s:Button label="Button With a Longer Label" />
    <s:Label text="Some Label" />
    <s:BorderContainer backgroundColor="#FF0000"
                       height="50"
                       width="10" />
    <s:Label text="Some Other Label" />
    <s:Label text="Hello" color="#FF0000" />

  </flexlib:FlowBox>


  <s:Label text="hGap = 0, vGap = 0" />
  <flexlib:FlowBox borderStyle="solid"
                   width="250"
                   backgroundColor="#FFFFFF"
                   horizontalGap="0"
                   verticalGap="0">

    <s:Button label="Button" />
    <s:TextInput />
    <s:Label text="Label" />
    <s:Button label="Another Button" />
    <s:Button label="Button With a Longer Label" />
    <s:Label text="Some Label" />
    <s:BorderContainer backgroundColor="#FF0000"
                       height="50"
                       width="10" />
    <s:Label text="Some Other Label" />
    <s:Label text="Hello" color="#FF0000" />

  </flexlib:FlowBox>

</s:Application>
