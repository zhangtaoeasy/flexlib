<?xml version="1.0"?>
<flex-config>
    <compiler>
        <source-path>
            <path-element>../../src</path-element>
        </source-path>

        <external-library-path>
            <path-element>@FLEX_SDK@/frameworks/libs/player/10/playerglobal.swc</path-element>
        </external-library-path>
        <library-path>
            <path-element>@FLEX_SDK@/frameworks/libs</path-element>
            <path-element>@FLEX_SDK@/frameworks/locale/{locale}</path-element>
        </library-path>

        <!-- Specify a URI to associate with a manifest of components for use as MXML -->
        <!-- elements.                                                                -->
        <namespaces>
            <namespace>
                <uri>http://code.google.com/p/flexlib/</uri>
                <manifest>../../src/manifest.xml</manifest>
            </namespace>
        </namespaces>

        <define>
            <name>FLEX_TARGET_VERSION::flex3</name>
            <value>@FLEX_VERSION_3@</value>
        </define>
        <define>
            <name>FLEX_TARGET_VERSION::flex4</name>
            <value>@FLEX_VERSION_4@</value>
        </define>
    </compiler>
    <include-namespaces>
        <uri>http://code.google.com/p/flexlib/</uri>
    </include-namespaces>
    <output>../../bin/</output>
    <compiler.debug>true</compiler.debug>
    <compiler.optimize>false</compiler.optimize>


    <compiler.keep-as3-metadata>
        <name>Bindable</name>
        <name>Managed</name>
        <name>ChangeEvent</name>
        <name>NonCommittingChangeEvent</name>
        <name>Transient</name>
    </compiler.keep-as3-metadata>
</flex-config>
